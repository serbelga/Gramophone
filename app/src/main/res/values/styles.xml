<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Main color -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!-- If isn't status bar color, the status bar color will be primary dark -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>

        <!-- Status Bar color and windowLightStatusBar true if Status bar is Light and false if it's dark-->
        <!--<item name="android:statusBarColor">@color/colorStatusBar</item>-->

        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>

        <!-- Color Secondary - Color used in FAB and checkboxes, switches ... -->
        <item name="colorSecondary">@color/colorSecondary</item>

        <!-- Color On Primary - Color of text and icons in colored components as Buttons and BottomNavigationView -->
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <!-- Color On Seconday - Color of text and icons in colored Secondary components as FAB... -->
        <item name="colorOnSecondary">@color/colorOnSecondary</item>

        <!--Color Surface - Color used in CardView Background, Toolbar ... -->
        <item name="colorSurface">@color/colorSurface</item>
        <!--Color On Surface - Color used in Elements inside Surface as Toolbar title ... -->
        <item name="colorOnSurface">@color/colorOnSurface</item>

        <item name="colorError">@color/redDark</item>
        <item name="colorOnError">@color/colorOnError</item>

        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="colorOnBackground">@color/colorOnBackground</item>

        <item name="toolbarStyle">
            @style/Widget.MaterialComponents.Toolbar.Surface
        </item>

        <item name="actionBarStyle">
            @style/Widget.MaterialComponents.ActionBar.Surface
        </item>

        <!-- Shape System -->
        <item name="shapeAppearanceSmallComponent">@style/SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/LargeComponent</item>

        <item name="textAppearanceHeadline1">
            @style/Headline1Text
        </item>

        <item name="textAppearanceHeadline2">
            @style/Headline2Text
        </item>

        <item name="textAppearanceHeadline3">
            @style/Headline3Text
        </item>

        <item name="textAppearanceHeadline6">
            @style/Headline6Text
        </item>

        <item name="textAppearanceButton">
            @style/ButtonText
        </item>

        <item name="textAppearanceCaption">
            @style/CaptionText
        </item>

        <item name="textAppearanceBody1">
            @style/Body1Text
        </item>

        <item name="textAppearanceBody2">
            @style/Body2Text
        </item>

        <item name="textAppearanceOverline">
            @style/OverlineText
        </item>

        <item name="textAppearanceSubtitle1">
            @style/Subtitle1Text
        </item>
    </style>
</resources>
